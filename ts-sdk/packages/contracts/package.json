{
  "name": "@podnetwork/contracts",
  "version": "0.1.0-dev.4",
  "description": "Smart contract utilities for Pod Network SDK",
  "author": "pod network",
  "license": "MIT",
  "private": false,
  "publishConfig": {
    "access": "restricted"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/podnetwork/pod-sdk",
    "directory": "ts-sdk/packages/contracts"
  },
  "homepage": "https://pod.network",
  "bugs": {
    "url": "https://github.com/podnetwork/pod-sdk/issues"
  },
  "engines": {
    "node": ">= 24",
    "pnpm": ">= 9.15"
  },
  "keywords": [
    "pod",
    "ethereum",
    "blockchain",
    "sdk",
    "web3",
    "contracts",
    "abi",
    "solidity"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "extract-abi": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rimraf dist",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@podnetwork/abi": "workspace:*",
    "@podnetwork/core": "workspace:*",
    "@podnetwork/ws": "workspace:*",
    "abitype": "^1.0.8",
    "glob": "^11.0.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "rimraf": "^6.0.1",
    "tsup": "^8.3.5",
    "typescript": "~5.7.2"
  },
  "peerDependencies": {
    "ethers": "^6.0.0"
  }
}
