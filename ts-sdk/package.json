{
  "name": "pod-sdk-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "pod network TypeScript SDK monorepo",
  "keywords": [
    "pod",
    "ethereum",
    "blockchain",
    "sdk",
    "web3"
  ],
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build": "pnpm -r run build",
    "build:core": "pnpm --filter @podnetwork/core run build",
    "build:wallet": "pnpm --filter @podnetwork/wallet run build",
    "build:ws": "pnpm --filter @podnetwork/ws run build",
    "build:orderbook": "pnpm --filter @podnetwork/orderbook run build",
    "build:auction": "pnpm --filter @podnetwork/auction run build",
    "build:faucet": "pnpm --filter @podnetwork/faucet run build",
    "build:pod-sdk": "pnpm --filter pod-sdk run build",
    "clean": "pnpm -r run clean && rimraf node_modules",
    "dev": "pnpm -r --parallel run dev",
    "format": "prettier --write \"packages/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,tsx,json,md}\"",
    "lint": "eslint \"packages/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"packages/**/*.{ts,tsx}\" --fix",
    "test": "vitest run --project unit",
    "test:watch": "vitest --project unit",
    "test:coverage": "vitest run --project unit --coverage",
    "test:e2e": "vitest run --project e2e",
    "test:e2e:watch": "vitest --project e2e",
    "test:all": "vitest run",
    "typecheck": "pnpm -r run typecheck",
    "docs": "typedoc",
    "error:lookup": "tsx scripts/error-lookup.ts",
    "error:docs": "tsx scripts/generate-error-docs.ts",
    "prepare": "pnpm -r run build",
    "pre:push": "pnpm format:check && pnpm lint && pnpm typecheck && pnpm test && pnpm build && pnpm docs"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "typedoc": "^0.27.6",
    "@logtape/logtape": "^0.8.1",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "tsup": "^8.3.5",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.18.1",
    "vitest": "^2.1.8"
  }
}
